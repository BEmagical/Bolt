include ../mixins/link
include ../mixins/og-meta
include ../mixins/twitter-meta

doctype html
html(manifest = dev ? '' : 'manifest.appcache')
  include ../includes/head

  block title
    title= data.meta.title

  block description
    meta(name='description', content=data.meta.description)

  block css
    //- if we're in dev mode, dont merge all styles together, import them individually
    if dev
      each file in app_files.css.lib
        link(rel='stylesheet', href=file)

    //- this is generated by stylus and is source mapped
    link(rel='stylesheet', href='styles/app.css')

  body
    block content

    block scripts
      include ../includes/scripts