// try to keep this file about block level elements and their high level/overall usage as a component
figure, header, section, article
  position:relative

img
  max-width: 100%
  height:auto
  vertical-align:middle

input,
button,
select,
textarea
  font-family: inherit
  font-size: inherit
  line-height: inherit

// nav

article
  margin:0 auto
  @media $tablet
    max-width:700px

section
  padding:2rem

figure
  @extend .text-center
  @extend .no-callout
  > img
    width:100%

figcaption
  position:absolute
  bottom:0
  left:0
  width:100%
  padding:3rem 1rem 1rem 1rem
  background-color:hsla(0,0%,0%,0.5)
  background:linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,0.8))
